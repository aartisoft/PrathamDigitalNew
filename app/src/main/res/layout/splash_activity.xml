<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:clipChildren="false"
    android:fitsSystemWindows="true"
    tools:context=".ui.splash.ActivitySplash">

    <ImageView
        android:id="@+id/img_splash_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rotation="@android:integer/config_mediumAnimTime"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_light"
        tools:ignore="ContentDescription" />

    <!--<ImageView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_marginRight="@dimen/_30sdp"-->
    <!--android:src="@drawable/splash_boy" />-->

    <ImageView
        android:id="@+id/iv_pradigi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/_60sdp"
        android:scaleType="centerInside"
        android:src="@drawable/splash_title"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <com.pratham.prathamdigital.custom.svg_view.AnimatedSvgView
        android:id="@+id/animated_svg_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:animatedSvgFillColors="@array/pradigi_logo_color"
        app:animatedSvgGlyphStrings="@array/pradigi_logo"
        app:animatedSvgTraceTimePerGlyph="200" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/avatar_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_pradigi"
        android:duplicateParentState="true"
        android:scaleType="centerInside"
        android:visibility="invisible"
        app:lottie_autoPlay="true"
        app:lottie_fileName="PingPong.json"
        app:lottie_loop="true" />

</RelativeLayout>