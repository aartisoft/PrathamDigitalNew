<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/edittext_bkgd"
    android:minHeight="@dimen/_50sdp">

    <ImageView
        android:id="@+id/assign_ttl_mic"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/_2sdp"
        android:scaleType="center"
        app:srcCompat="@drawable/asl_trimclip_mic"
        tools:ignore="ContentDescription" />

    <com.pratham.prathamdigital.custom.edittexts.IndieEditText
        android:id="@+id/et_assign_ttl_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/_5sdp"
        android:layout_toStartOf="@+id/assign_ttl_mic"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:textColor="@color/black_20" />
</RelativeLayout>
