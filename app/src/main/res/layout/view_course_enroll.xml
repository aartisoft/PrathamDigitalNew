<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/_60sdp"
    android:padding="@dimen/_5sdp"
    app:cardBackgroundColor="@color/lightGrey"
    app:cardCornerRadius="@dimen/_7sdp"
    app:cardElevation="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="@dimen/_2sdp">

        <com.pratham.prathamdigital.custom.textviews.IndieFlowerTextView
            android:id="@+id/txt_course"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_3sdp"
            android:background="@drawable/course_etxt_bkgd"
            android:elevation="@dimen/_5sdp"
            android:gravity="center"
            android:hint="Please Select Course"
            android:padding="@dimen/_2sdp"
            android:textColor="@android:color/black"
            tools:ignore="HardcodedText" />

        <com.pratham.prathamdigital.custom.buttons.IndieFlowerButton
            android:id="@+id/btn_selectCourse"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_3sdp"
            android:layout_toRightOf="@+id/txt_course"
            android:background="@drawable/button_orange_selector"
            android:text="Select Course"
            android:textAllCaps="false"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />

        <com.pratham.prathamdigital.custom.textviews.IndieFlowerTextView
            android:id="@+id/txt_course_time"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/txt_course"
            android:layout_margin="@dimen/_3sdp"
            android:background="@drawable/course_etxt_bkgd"
            android:elevation="@dimen/_5sdp"
            android:gravity="center"
            android:hint="Please Select Time"
            android:padding="@dimen/_2sdp"
            android:textColor="@android:color/black"
            tools:ignore="HardcodedText" />

        <com.pratham.prathamdigital.custom.buttons.IndieFlowerButton
            android:id="@+id/btn_selectCourseTime"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/btn_selectCourse"
            android:layout_margin="@dimen/_3sdp"
            android:layout_toRightOf="@+id/txt_course_time"
            android:background="@drawable/button_orange_selector"
            android:text="Select Time"
            android:textAllCaps="false"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />

        <com.pratham.prathamdigital.custom.edittexts.IndieEditText
            android:id="@+id/et_why_enroll"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/txt_course_time"
            android:layout_margin="@dimen/_3sdp"
            android:background="@drawable/course_etxt_bkgd"
            android:gravity="center"
            android:hint="Why did you chose this course?"
            android:padding="@dimen/_2sdp"
            android:scrollbars="vertical"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/iv_course_listen"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/btn_selectCourseTime"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_toEndOf="@+id/et_why_enroll"
            app:srcCompat="@drawable/ic_mic_off_to_on" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>