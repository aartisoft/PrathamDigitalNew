<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="@dimen/_80sdp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/_5sdp"
    app:cardBackgroundColor="@color/light_orange"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/course_content_image"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:duplicateParentState="true"
            app:actualImageScaleType="centerInside"
            app:placeholderImageScaleType="centerInside"
            app:roundedCornerRadius="@dimen/_5sdp"
            app:roundingBorderColor="@color/white"
            app:roundingBorderWidth="@dimen/_1sdp" />

        <com.pratham.prathamdigital.custom.textviews.IndieFlowerTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_toEndOf="@+id/course_content_image"
            android:lines="1"
            android:text="sdsdsdfsdsd.sd"
            android:textSize="@dimen/_25sdp"
            tools:ignore="HardcodedText" />

        <com.pratham.prathamdigital.custom.buttons.IndieFlowerButton
            android:id="@+id/btn_course_resume"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_toEndOf="@+id/course_content_image"
            android:background="@drawable/course_start_bkgd"
            android:drawableLeft="@drawable/ic_course_play"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_10sdp"
            android:text="Resume"
            android:textColor="@android:color/black"
            tools:ignore="HardcodedText" />
    </RelativeLayout>
</android.support.design.card.MaterialCardView>