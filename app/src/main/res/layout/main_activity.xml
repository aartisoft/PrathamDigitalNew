<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bkgd_two"
    tools:context=".ui.dashboard.ActivityMain">

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.pratham.prathamdigital.custom.shapes.ShapeOfView
        android:id="@+id/avatar_shape"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:elevation="@dimen/_10sdp"
        app:shape_clip_drawable="@drawable/dashboard_half_circle">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/avatar_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:scaleType="centerInside"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />
    </com.pratham.prathamdigital.custom.shapes.ShapeOfView>

    <com.pratham.prathamdigital.custom.shapes.ShapeOfView
        android:id="@+id/search_shape"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentRight="true"
        android:elevation="@dimen/_10sdp"
        app:shape_clip_drawable="@drawable/dashboard_search_bkgd">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/dashboard_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:scaleType="centerInside"
            app:lottie_autoPlay="true"
            app:lottie_fileName="search.json"
            app:lottie_loop="true" />
    </com.pratham.prathamdigital.custom.shapes.ShapeOfView>

    <RelativeLayout
        android:id="@+id/download_badge"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:elevation="@dimen/_10sdp"
        android:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/download_fab_bkgd"
            android:padding="@dimen/_12sdp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="download.json"
            app:lottie_loop="true" />

        <com.pratham.prathamdigital.custom.NotificationBadge
            android:id="@+id/download_notification"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp" />
    </RelativeLayout>
</RelativeLayout>