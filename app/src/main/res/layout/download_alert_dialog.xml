<?xml version="1.0" encoding="utf-8"?>
<com.pratham.prathamdigital.custom.BlurPopupDialog.ShadowContainer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_350sdp"
    android:layout_height="@dimen/_250sdp"
    android:layout_gravity="center"
    app:sc_shadowColor="#40444444">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_alarm" />

        <com.pratham.prathamdigital.custom.textviews.IndieFlowerTextView
            android:id="@+id/txt_download_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/a1"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:text="@string/content_download_alert"
            android:textColor="@color/purple"
            android:textSize="@dimen/_23sdp" />

        <com.pratham.prathamdigital.custom.buttons.IndieFlowerButton
            android:id="@+id/btn_okay"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/update_button_round_bg"
            android:elevation="@dimen/_8sdp"
            android:gravity="center"
            android:text="@string/Okay"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</com.pratham.prathamdigital.custom.BlurPopupDialog.ShadowContainer>