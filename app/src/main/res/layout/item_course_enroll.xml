<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    android:minHeight="@dimen/_60sdp"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/blue_btn_bg_color"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:id="@+id/rl_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:gravity="center"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:id="@+id/iv_completed_course"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:contentDescription="Completed"
                android:scaleType="centerInside"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_tick"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/iv_delete_course"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_toEndOf="@+id/iv_completed_course"
                android:background="@drawable/delete_item_bkgd_yes"
                android:contentDescription="Delete"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_delete_file"
                tools:ignore="HardcodedText" />

            <com.pratham.prathamdigital.custom.buttons.IndieFlowerButton
                android:id="@+id/btn_resume"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/button_orange_selector"
                android:text="View"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:visibility="gone"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

        <com.pratham.prathamdigital.custom.textviews.IndieFlowerTextView
            android:id="@+id/item_course_index"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/rounded_course_index_bkgd"
            android:gravity="center"
            android:minHeight="@dimen/_50sdp"
            android:textColor="@color/material_blue_grey_80"
            android:textSize="@dimen/_20sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_5sdp"
            android:layout_toStartOf="@+id/rl_options"
            android:layout_toEndOf="@+id/item_course_index"
            android:background="@android:color/transparent"
            android:minHeight="@dimen/_50sdp">

            <com.pratham.prathamdigital.custom.textviews.IndieFlowerTextView
                android:id="@+id/item_en_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="@dimen/_16sdp" />

            <com.pratham.prathamdigital.custom.textviews.IndieFlowerTextView
                android:id="@+id/item_en_course_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_en_course_name"
                android:textColor="@color/material_blue_grey_80"
                android:textSize="@dimen/_11sdp" />

            <com.pratham.prathamdigital.custom.textviews.IndieFlowerTextView
                android:id="@+id/item_en_course_assign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_en_course_detail"
                android:textColor="@color/material_blue_grey_80"
                android:textSize="@dimen/_11sdp" />

            <com.pratham.prathamdigital.custom.textviews.IndieFlowerTextView
                android:id="@+id/item_en_course_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_en_course_assign"
                android:textColor="@color/material_blue_grey_80"
                android:textSize="@dimen/_11sdp" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.design.card.MaterialCardView>