<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    android:layout_margin="@dimen/_5sdp"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/top_sheet_content_home"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="match_parent">

        <android.support.design.card.MaterialCardView
            android:id="@+id/i1"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#d1ff3a41"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_6sdp"
                app:srcCompat="@drawable/ic_content_home" />
        </android.support.design.card.MaterialCardView>

        <com.pratham.prathamdigital.custom.textviews.IndieFlowerTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/i1"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:text="Home"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top_sheet_language"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="match_parent">

        <android.support.design.card.MaterialCardView
            android:id="@+id/i2"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#d1ff3a41"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_6sdp"
                app:srcCompat="@drawable/ic_language" />
        </android.support.design.card.MaterialCardView>

        <com.pratham.prathamdigital.custom.textviews.IndieFlowerTextView
            android:id="@+id/top_txt_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/i2"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:text="Language"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top_sheet_search"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="match_parent"
        android:visibility="gone">

        <android.support.design.card.MaterialCardView
            android:id="@+id/i3"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#d1ff3a41"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_6sdp"
                app:srcCompat="@drawable/ic_search" />
        </android.support.design.card.MaterialCardView>

        <com.pratham.prathamdigital.custom.textviews.IndieFlowerTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/i3"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:text="Search"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top_sheet_import"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="match_parent">

        <android.support.design.card.MaterialCardView
            android:id="@+id/i4"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#d1ff3a41"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_6sdp"
                app:srcCompat="@drawable/ic_import" />
        </android.support.design.card.MaterialCardView>

        <com.pratham.prathamdigital.custom.textviews.IndieFlowerTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/i4"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:text="Import"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top_sheet_connect_wifi"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="match_parent">

        <android.support.design.card.MaterialCardView
            android:id="@+id/i5"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#d1ff3a41"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_6sdp"
                app:srcCompat="@drawable/ic_wifi_signal" />
        </android.support.design.card.MaterialCardView>

        <com.pratham.prathamdigital.custom.textviews.IndieFlowerTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/i5"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:text="Connect"
            android:textColor="@android:color/black" />
    </RelativeLayout>
</LinearLayout>