<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="match_parent"
    android:id="@+id/root_select_item"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_8sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.pratham.prathamdigital.custom.textviews.IndieFlowerTextView
            android:id="@+id/exp_header_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/new_courses_bkgd"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_22sdp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_exp_course_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exp_header_name" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>