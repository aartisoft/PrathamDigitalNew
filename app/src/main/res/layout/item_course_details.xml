<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_80sdp"
        android:orientation="horizontal"
        android:weightSum="1">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/course_child_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="0.2"
            android:maxWidth="@dimen/_70sdp"
            app:actualImageScaleType="centerInside"
            app:placeholderImageScaleType="centerInside"
            app:roundedCornerRadius="@dimen/_35sdp"
            app:roundingBorderColor="@color/white"
            app:roundingBorderWidth="@dimen/_1sdp" />

        <com.pratham.prathamdigital.custom.textviews.IndieFlowerTextView
            android:id="@+id/course_child_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="0.6"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_18sdp" />

        <com.pratham.prathamdigital.custom.textviews.IndieFlowerTextView
            android:id="@+id/play_content"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="0.2"
            android:background="@drawable/avatars_round_bg"
            android:gravity="center"
            android:text="Play"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_2sdp"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@color/lightGrey" />
</LinearLayout>