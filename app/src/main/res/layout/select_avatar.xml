<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern_bg"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="@dimen/size_180"
            android:layout_height="@dimen/size_180"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/avatars_round_bg"
            android:elevation="@dimen/size_10" />

        <com.yarolegovich.discretescrollview.DiscreteScrollView
            android:id="@+id/avatar_rv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_200"
            android:background="@android:color/transparent"
            android:elevation="@dimen/size_15"
            app:dsv_orientation="horizontal" />

        <!--<RelativeLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_below="@+id/avatar_rv">-->

        <com.pratham.prathamdigital.custom.edittexts.PacificoEditText
            android:id="@+id/et_child_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:layout_below="@+id/avatar_rv"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/size_150"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/avatar_age_selected"
            android:elevation="@dimen/size_18"
            android:gravity="center"
            android:hint="Name"
            android:textColor="@color/purple"
            android:textColorHint="@color/black_20" />

        <LinearLayout
            android:id="@+id/spinner_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:layout_below="@+id/et_child_name"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/size_145"
            android:elevation="@dimen/size_18"
            android:orientation="horizontal"
            android:weightSum="1">

            <Spinner
                android:id="@+id/spinner_class"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size_3"
                android:layout_weight=".5"
                android:background="@drawable/avatar_age_selected"
                android:drawSelectorOnTop="true"
                android:elevation="@dimen/size_10"
                android:entries="@array/student_class"
                android:textAlignment="center" />

            <Spinner
                android:id="@+id/spinner_age"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size_3"
                android:layout_weight=".5"
                android:background="@drawable/avatar_age_selected"
                android:drawSelectorOnTop="true"
                android:elevation="@dimen/size_10"
                android:entries="@array/age"
                android:textAlignment="center" />
        </LinearLayout>
        <!--
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40"
                    android:layout_below="@+id/et_child_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/size_20"
                    android:layout_marginRight="@dimen/size_20"
