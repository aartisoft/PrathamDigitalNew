<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern_bg"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/avatars_round_bg"
            android:elevation="@dimen/_10sdp" />

        <com.yarolegovich.discretescrollview.DiscreteScrollView
            android:id="@+id/avatar_rv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_170sdp"
            android:background="@android:color/transparent"
            android:elevation="@dimen/_15sdp"
            app:dsv_orientation="horizontal" />

        <com.pratham.prathamdigital.custom.edittexts.PacificoEditText
            android:id="@+id/et_child_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/avatar_rv"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/avatar_age_selected"
            android:elevation="@dimen/_18sdp"
            android:gravity="center"
            android:hint="Name"
            android:textColor="@color/purple"
            android:textColorHint="@color/black_20" />

        <LinearLayout
            android:id="@+id/spinner_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/et_child_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:elevation="@dimen/_15sdp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Spinner
                android:id="@+id/spinner_class"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_weight=".5"
                android:background="@drawable/avatar_age_selected"
                android:drawSelectorOnTop="true"
                android:elevation="@dimen/_10sdp"
                android:entries="@array/student_class"
                android:textAlignment="center" />

            <Spinner
                android:id="@+id/spinner_age"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight=".5"
                android:background="@drawable/avatar_age_selected"
                android:drawSelectorOnTop="true"
                android:elevation="@dimen/_10sdp"
                android:entries="@array/age"
                android:textAlignment="center" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_avatar_next"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/spinner_ll"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/avatar_next_button_round_bg"
            android:elevation="@dimen/_10sdp"
            android:scaleType="centerCrop"
            android:text="Next"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</ScrollView>